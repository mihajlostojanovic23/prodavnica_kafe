        <!---------------------- END nav ------------------------->



      <br> <br> <br>
   <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section ftco-animate">
          	<span class="subheading">Nase najbolje!</span>
            <h2 class="mb-4">Odaberi i uživaj</h2>
		  </div>
		  <div class="col-lg-12" style="text-align: center;">
		 <% if (locals.email==="mihajlomixi@live.co.uk") {
			  %> 
			<button class="btn btn-secondary" style="border-radius: 40px;">  
				<a href="kreiraj" style="color: white;"> Kreiraj proizvod </a></button>
		 <% } %> 
		 </div>
        </div>
			<div class="heading-menu text-center ftco-animate">
					<h3 class="subheading">Svi proizvodi</h3>
					
					
				</div>
				<div class="row">
				<% proizvodi.forEach (function(proizvod) {%>
					
			<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url('/images/<%= proizvod.slika %>');"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half ">
						<h3><%= proizvod.ime %> </h3>
				  </div>
				  
				  <div class="one-forth">
					<span class="price"><%= proizvod.cena %>rsd</span>
			  </div>
			  
	              </div>
	              <div class="d-flex flex-column " style="text-align: right;">
					<form action="/detaljnije/<%= proizvod.id %>" method="GET">
					<button  type="submit" class="btn btn-secondary" > Detaljnije </button>
					</form>
					
					 <% if (locals.email==="mihajlomixi@live.co.uk") {%>  	
						<form action="/proizvod_brisanje/<%= proizvod.id %>" method="POST">
							<button  type="submit" class="btn btn-secondary" > Obrisi </button> </form> 

							<form action="/proizvod_izmena/<%= proizvod.id %>" method="GET">
								<button  type="submit" class="btn btn-secondary" > Izmeni </button>
								</form>
							<% } %>
				    
						 
								
			</div>
			</div> 
		</div>
		</div>
		<% }) %>
		</div>
		</div>
		</section>
			
    <%- include("partials/footer"); %>
	<%- include("partials/skripte"); %>
    
  </body>
</html>